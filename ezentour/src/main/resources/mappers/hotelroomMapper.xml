<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="hotelroom">
	<!-- resultType을 alias 처리하기 위해서는 src/main/resources/mybatis-config.xml에서 
		설정하기 -->
	<!-- 1. 호텔 정보 추출 후 장바구니에 삽입 -->
	<select id="selectone" resultType="hotelroomDto">
		select * from hotel_room where hr_h_no = #{hr_h_no} and hr_date = #{hr_date}
	</select>

	<insert id="hotelroom_insert">
		insert into hotel_room values (#{hr_h_no}, TO_DATE('#{hr_date}','dd/MM/yy'), #{hr_room})
	</insert>

	<update id="hotelroom_update">
		update hotel_room set hr_room = hr_room + #{hr_room} where hr_h_no = #{hr_h_no} and hr_date = #{hr_date}
	</update>

</mapper>







